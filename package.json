{
  "name": "@ibm-aspera/desktop-sdk-js",
  "version": "0.1.19",
  "author": "IBM Aspera Desktop Group",
  "private": true,
  "main": "commonjs/index.js",
  "types": "commonjs/index.d.ts",
  "scripts": {
    "build:deploy": "node build.js",
    "build": "rm -rf ./dist && webpack --mode=production",
    "build:module": "tsc --project tsconfig.module.json",
    "dev": "npm run set:hosts && webpack serve --mode development",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "release": "standard-version",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "docs": "typedoc src/index.ts",
    "set:hosts": "if ! hostile list | grep \"127.0.0.1 desktop-sdk.aspera.us\" >/dev/null; then sudo hostile set 127.0.0.1 desktop-sdk.aspera.us; fi",
    "build:demo": "npm run build && cp src/index.html dist/js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:Aspera/desktop-sdk-ts.git"
  },
  "standard-version": {
    "message": "chore(release): %s\n\n[ci skip]",
    "scripts": {
      "posttag": "npm run build"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "hostile": "^1.3.3",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.5.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.4",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.17.7",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.6.0"
  }
}
